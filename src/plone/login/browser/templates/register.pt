<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  i18n:domain="plone"
  tal:omit-tag="">
  <body tal:omit-tag="">

    <div id="login">
      <div id="login-warnings">
        <div class="alert" tal:condition="python:request.form.get('error', False)">
          <h4>Uh oh!</h4>
          <p>Looks like your password and confirmation don't match.<br />Please try again.</p>
        </div>
      </div>

      <h1 tal:condition="view/label | nothing">
        <span tal:replace="view/label">Form title</span>:
      </h1>

      <p tal:condition="view/description | nothing"
        tal:content="structure view/description">Form description</p>

      <!-- to switch to non-federated, remove the federated class below, and the .half class below that -->
      <div class="meat federated">
        <div class="native half">

          <form action="." method="post"
            tal:attributes="action view/action; enctype view/enctype">

            <tal:widgets repeat="widget view/widgets/values">
              <div class="row"
                tal:define="hidden python:widget.mode == 'hidden'"
                tal:omit-tag="hidden">

              <div class="field"
                tal:define="error widget/error;
                hidden python:widget.mode == 'hidden';"
                tal:attributes="class python:'field' + (error and ' error' or '')">
                <label for=""
                  tal:attributes="for widget/id"
                  tal:condition="not:hidden">
                  <span i18n:translate=""
                    tal:content="widget/label">label</span>
                </label>

                <span class="fieldRequired" title="Required"
                  tal:condition="python:widget.required and not hidden"
                  i18n:translate="label_required"
                  i18n:attributes="title title_required;">
                  (Required)
                </span>

                <div class="formHelp"
                  tal:define="description widget/field/description"
                  i18n:translate=""
                  tal:content="description"
                  tal:condition="python:description and not hidden"
                  >field description</div>

                  <div tal:condition="error"
                    tal:content="structure error/render">
                    Error
                  </div>

                  <div class="widget">
                    <input type="text" tal:replace="structure widget/render" />
                  </div>
                </div>
              </div>
            </tal:widgets>
            <span tal:replace="structure context/@@authenticator/authenticator"/>
            <img src="++resource++plone.login/img/pwd-strength.png" class="pwd-strength" alt="Password strength placeholder â€” someone make it happen" />

            <div class="action" tal:repeat="action view/actions/values|nothing">
              <input type="submit" tal:replace="structure action/render" />
            </div>
          </form>
        </div>
        <div class="external half">
          <input class="submit facebook" type="submit" value="Sign up with Facebook">
          <input class="submit google" type="submit" value="Sign up with Google">
        </div>
      </div>
      <div class="footer">
        <p class="login">Already have an account? <a href="@@login" class="emph">Log in here &raquo;</a>.</p>
      </div>
    </div>
  </body>
</html>